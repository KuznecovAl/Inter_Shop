use shop_db;
CREATE TABLE USERS
(
  USER_ID INT PRIMARY KEY NOT NULL AUTO_INCREMENT,
  LOGIN VARCHAR(20) NOT NULL,
  PASSWORD VARCHAR(50) NOT NULL,
  PRIVILEGE INT DEFAULT 0 NOT NULL,
  NAME VARCHAR(20) DEFAULT 'Имя' NOT NULL,
  LNAME VARCHAR(20) DEFAULT 'Фамилия' NOT NULL,
  EMAIL VARCHAR(30) DEFAULT 'Адрес электронной почты' NOT NULL,
  PHONE VARCHAR(20) DEFAULT 'Телефон' NOT NULL,
  ORDERS_KEY INT DEFAULT 0 NOT NULL,
  BASKET_KEY INT DEFAULT 0 NOT NULL,
  ADDRESS_CITY VARCHAR(20) DEFAULT 'Город' NOT NULL,
  ADDRESS_STREET VARCHAR(20) DEFAULT 'Улица' NOT NULL,
  ADDRESS_HOUSE VARCHAR(20) DEFAULT 'Номер дома' NOT NULL,
  ADDRESS_FLAT VARCHAR(20) DEFAULT 'Номер квартиры',
  ADDRESS_INDEX VARCHAR(20) DEFAULT 'Индекс' NOT NULL,
  LANG VARCHAR(20) DEFAULT 'ruRU' NOT NULL,
  STATUS VARCHAR(20) NOT NULL
);
CREATE UNIQUE INDEX users_LOGIN_uindex ON users (LOGIN);
CREATE UNIQUE INDEX users_ORDERS_KEY_uindex ON users (ORDERS_KEY);